<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.HamburgerActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.LoodosProject.AppBarOverlay"
        >

<!--        app:popupTheme="@style/Theme.LoodosProject.PopupOverlay"-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/gradientEndColor"
            app:popupTheme="@style/Theme.LoodosProject.PopupOverlay"
            app:titleTextColor="@color/darkBlue" />

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_hamburger" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>