<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.hamburger.SearchRoomFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/background"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="7"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/inputCoinName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Coin Name"
                    android:background="@drawable/rounded_edittext"
                    android:layout_marginBottom="20dp"
                    android:padding="10dp"/>
                <EditText
                    android:id="@+id/inputCoinSymbol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Coin Symbol"
                    android:background="@drawable/rounded_edittext"
                    android:padding="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:id="@+id/btnSearch"
                android:layout_weight="3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:background="@drawable/main_page_click_effect"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>